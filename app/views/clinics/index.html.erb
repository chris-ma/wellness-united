<div class="container">
      <div class="row index-heading">
        <div class="col-lg-8">
            <h1>Clinics<span class="glyphicon glyphicon-map-marker" style="color:#1abc9c"></span></h1>
          </div>
            <div class="col-lg-4">
          <% if user_signed_in? %>

          <div class="button-fix">
            <%= link_to 'Add Clinic', new_clinic_path, class: "btn btn-success" %>
          </div>

          <% end %>
          </div>
          </div>
        <hr>

          <div class="row">
              <% @clinics.each do |clinic| %> 
                  <div class="col-md-4 marketing places-index-img" >

                <h2><%= link_to clinic.clinic_name, clinic %></h2>

                <% if user_signed_in? && current_user.admin? %>
                <%= link_to 'Edit', edit_clinic_path(clinic), class: "btn btn-info" %>
                <%= link_to 'Destroy', clinic, method: :delete, class: "btn btn-danger" %>
                <% end %>
                </div>
              <% end %>
          </div>
  </div>
</div>